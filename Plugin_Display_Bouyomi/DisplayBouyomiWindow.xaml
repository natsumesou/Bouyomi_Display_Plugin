<Window x:Class="Plugin_Display_Bouyomi.DisplayBouyomiWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Plugin_Display_Bouyomi"
        mc:Ignorable="d"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStyle="None"
        SizeToContent="Height"
        SizeChanged="DisplayBouyomiWindow_SizeChanged"
        Title="棒読みちゃん表示管理" Top="{Binding WindowTop}" Left="{Binding WindowLeft}" Opacity="100" ShowInTaskbar="False" Topmost="True">
    <Window.Resources>
        <Style x:Key="customStyle"  TargetType="TextBlock">
            <Setter Property="Foreground" Value="{Binding Setting.FontColor}"></Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="Transparent"></Setter>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Grid>
        <TextBlock Text="{Binding BouyomiMessage}" FontSize="{Binding Setting.FontSize}" FontWeight="Bold" TextWrapping="Wrap" Style="{StaticResource customStyle}">
        </TextBlock>
    </Grid>
</Window>